{
  "name": "svelte",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/svelte/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/svelte",
        "main": "packages/svelte/src/index.ts",
        "tsConfig": "packages/svelte/tsconfig.lib.json",
        "project": "packages/svelte/package.json",
        "assets": []
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs svelte {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/svelte"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/svelte"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/svelte/**/*.ts"]
      }
    }
  },
  "tags": []
}
