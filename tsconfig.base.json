{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pryzm/ast-utils": ["packages/ast-utils/src/index.ts"],
      "@pryzm/compiler": ["packages/compiler/src/index.ts"],
      "@pryzm/core": ["packages/core/src/index.ts"],
      "@pryzm/core/jsx-runtime": ["packages/core/src/jsx-runtime.d.ts"],
      "@pryzm/lit": ["packages/lit/src/index.ts"],
      "@pryzm/react": ["packages/react/src/index.ts"],
      "@pryzm/svelte": ["packages/svelte/src/index.ts"],
      "@pryzm/vue": ["packages/vue/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
